{
  "name": "Justin Bahn Design Extension",
  "version": "2.2",
  "manifest_version": 2,
  "description": "Make every website look like it was designed by Justin Bahn!",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "name": "justin-bahn-design-tool",
      "icons": ["icon.png"],
      "default_icon": "icon.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}